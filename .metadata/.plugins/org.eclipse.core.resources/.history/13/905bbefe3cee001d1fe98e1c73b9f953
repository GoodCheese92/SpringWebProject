    <script>
        function openAddressSearch() {
            new daum.Postcode({
                oncomplete: function(data) {
                    const postcode = data.zonecode;
                    const address = data.address;
                    document.getElementById('postcode').value = postcode;
                    document.getElementById('address').value = address;
                }
            }).open();
        }
    </script>

