<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="b">
	<select id="select_product" resultType="product">
		select * from product
		where product_idx=#{product_idx}
	</select>
	<select id="select_products" parameterType="java.util.List"
		resultType="product">
		SELECT * FROM product WHERE product_idx IN
		<foreach collection="list" item="orderlist" open="(" close=")"
			separator=",">
			#{orderlist.product_idx}
		</foreach>
	</select>
	<select id="select_producer_name" parameterType="int"
		resultType="producer">
		select * from Producer where producer_idx=#{idx}
	</select>
	<insert id="insertOrder" parameterType="orderlist">
		insert into order_list values(
		seq_orderlist_idx.nextVal,
		#{orderlist_addr},
		0,
		#{orderlist_date},
		#{product_idx},
		#{product_amount},
		#{product_price},
		#{user_idx},
		#{orderlist_phonenumber},
		0
		)
	</insert>
	<select id="sysdate" resultType="java.sql.Timestamp">
		select sysdate from dual
	</select>
	<select id="selectProductName" resultType="String">
		select product_name from product where product_idx=#{product_idx}
	</select>
	<!--<select id="selectdate" resultType="orderlist">
		SELECT DISTINCT orderlist_date, pay_id FROM order_list WHERE user_idx = #{user_idx}
	</select>-->
	<select id="selectOrder" parameterType="orderlist" resultType="orderlist">
		select * from order_list where orderlist_date=#{orderlist_date} AND user_idx=#{user_idx}
	</select>
	<select id="selectOrderAll" resultType="orderlist">
		select * from order_list where user_idx=#{user_idx}
	</select>
	<update id="updateOrder" parameterType="orderlist">
		update order_list set
		orderlist_addr=#{orderlist_addr},
		orderlist_status=1,
		orderlist_phonenumber=#{orderlist_phonenumber}
		where orderlist_idx=#{orderlist_idx}
	</update>
	<!--<update id="updateOrderPaid" parameterType="orderlist">
		update order_list set
		orderlist_status=2,
		pay_id=#{pay_id},
		orderlist_date=#{orderlist_date}
		where orderlist_idx=#{orderlist_idx}
	</update>-->
</mapper>






















